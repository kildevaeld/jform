{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "./src"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/editors/index.ts",
        "./src/editors/editor.ts",
        "./src/editors/input-editor.ts",
        "./src/editors/list.ts",
        "./src/editors/number.ts",
        "./src/editors/select.ts",
        "./src/form.ts",
        "./src/types.ts",
        "./src/index.ts",
        "./src/validator.ts"
    ]
}
